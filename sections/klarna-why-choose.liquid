<section class="klarna-features klarna-features--{{ section.settings.background_color }}">
  <div class="klarna-features-container">
    {% if section.settings.section_title != blank %}
      <h2 class="klarna-features-title">{{ section.settings.section_title | escape }}</h2>
    {% endif %}
    {% if section.settings.intro_text != blank %}
      <div class="klarna-why-choose-intro">
        <p>{{ section.settings.intro_text }}</p>
      </div>
    {% endif %}
    <div class="klarna-why-choose-grid">
      <div class="klarna-why-choose-benefit">
        <div class="klarna-why-choose-icon">{{ section.settings.benefit_1_icon }}</div>
        <h4>{{ section.settings.benefit_1_title | escape }}</h4>
        <p>{{ section.settings.benefit_1_description }}</p>
      </div>
      <div class="klarna-why-choose-benefit">
        <div class="klarna-why-choose-icon">{{ section.settings.benefit_2_icon }}</div>
        <h4>{{ section.settings.benefit_2_title | escape }}</h4>
        <p>{{ section.settings.benefit_2_description }}</p>
      </div>
      <div class="klarna-why-choose-benefit">
        <div class="klarna-why-choose-icon">{{ section.settings.benefit_3_icon }}</div>
        <h4>{{ section.settings.benefit_3_title | escape }}</h4>
        <p>{{ section.settings.benefit_3_description }}</p>
      </div>
      <div class="klarna-why-choose-benefit">
        <div class="klarna-why-choose-icon">{{ section.settings.benefit_4_icon }}</div>
        <h4>{{ section.settings.benefit_4_title | escape }}</h4>
        <p>{{ section.settings.benefit_4_description }}</p>
      </div>
    </div>
  </div>
</section>


